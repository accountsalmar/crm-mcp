# Odoo ACL Setup Script - Environment Configuration
# Copy this file to .env and fill in your values

# Odoo Connection
ODOO_URL=https://duracubeuat.com.au
ODOO_DB=26_01_06

# Admin Credentials (required for ACL modifications)
ODOO_ADMIN_USER=admin
ODOO_ADMIN_PASSWORD=your_admin_password_here

# Target User (the user whose permissions will be modified)
TARGET_USER_LOGIN=accountsreceivable@duracube.com.au

# Optional: Read-only group name (will be created if doesn't exist)
READONLY_GROUP_NAME=API Read-Only Access

# Optional: Backup directory (defaults to ./backups)
BACKUP_DIR=./backups

# Optional: Log file path (defaults to ./logs/acl_setup.log)
LOG_FILE=./logs/acl_setup.log

# Optional: Retry configuration
MAX_RETRIES=3
RETRY_DELAY_SECONDS=2

# Optional: Batch size for ACL creation
BATCH_SIZE=50
